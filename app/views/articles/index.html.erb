<body class="center">
    <h1> Articles  </h1> 
        <p>
            <a href="/articles/new"> <button class="button_new">New article</button> </a>
        </p>
        <hr class="hr_specific">
        <% @articles.each do |a| %>

            <h2><%= a.id %>. <%= link_to "#{a.title}", article_path(a), class: "title"%></h2>   
            <p> <%= a.description %> </p>
            <%= link_to "Edit", edit_article_path(a), style: 'color:white', class: 'button_edit' %> <%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"}, style: 'color:white', class: 'button_delete' %>
            <hr class="hr_normal">

        <% end %>

</body>